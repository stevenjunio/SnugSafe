generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id          String       @id @unique @default(uuid())
  authId      String       @unique
  createdDate DateTime     @default(now())
  lastLogin   DateTime?    @default(now())
  userFiles   userFile[]
  userFolder  userFolder[]
}

model userFile {
  id     String @id @unique
  userId String
  user   user   @relation(fields: [userId], references: [id])
  name   String
  size   Int
  type   String
}

model fileUrl {
  id   String  @id @unique @default(uuid())
  url  String
  read Boolean @default(false)
}

model userFolder {
  id           String       @id @unique @default(uuid())
  name         String
  parentFolder userFolder?  @relation("FolderRelation", fields: [id], references: [id])
  userId       String
  user         user         @relation(fields: [userId], references: [authId])
  userFolder   userFolder[] @relation("FolderRelation")
}
